    <android.support.v7.widget.RecyclerView
        android:id="@+id/life_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
