<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/three_date"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:text="20061215"/>
    <View
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8a8a"
        android:layout_below="@id/three_date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白天"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <View
                android:id="@+id/left"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/title1"
                android:background="#8c8a8a" />
            <TextView
                android:id="@+id/day_weather"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/left"
                android:text="天气："
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/day_temperature"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/day_weather"
                android:text="温度："
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/day_wind"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/day_temperature"
                android:text="风向："
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/vvv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#8c8a8a"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_toRightOf="@id/vvv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <View
                android:id="@+id/right"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/title2"
                android:background="#8c8a8a" />
            <TextView
                android:id="@+id/night_weather"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/right"
                android:text="天气："
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/night_temperature"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/night_weather"
                android:text="温度："
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/night_wind"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/night_temperature"
                android:text="风向："
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>